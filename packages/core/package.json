{
  "name": "@promptx/core",
  "version": "1.10.1",
  "description": "Core library for PromptX - DPML-powered AI prompt framework",
  "main": "dist/index.js",
  "type": "commonjs",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.mjs"
    },
    "./cognition": {
      "require": "./dist/cognition.js",
      "import": "./dist/cognition.mjs"
    },
    "./resource": {
      "require": "./dist/resource.js",
      "import": "./dist/resource.mjs"
    },
    "./mcp": {
      "require": "./dist/mcp.js",
      "import": "./dist/mcp.mjs"
    },
    "./toolx": {
      "require": "./dist/toolx.js",
      "import": "./dist/toolx.mjs"
    }
  },
  "scripts": {
    "build": "tsup",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run build",
    "test": "vitest run"
  },
  "dependencies": {
    "@promptx/logger": "workspace:*",
    "@promptx/resource": "workspace:*",
    "chalk": "^4.1.2",
    "env-paths": "2.2.1",
    "eta": "^3.5.0",
    "fs-extra": "^11.3.0",
    "glob": "^10.4.5",
    "peggy": "^5.0.5",
    "pnpm": "^9.0.0"
  },
  "devDependencies": {},
  "files": [
    "dist/**/*",
    "README.md"
  ],
  "publishConfig": {
    "access": "public"
  },
  "license": "MIT"
}